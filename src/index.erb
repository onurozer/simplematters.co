---
# Feel free to add content and custom Front Matter to this file.
layout: default
---
<section>
  <div id="logo" class="bg-red-50">
    <a class="block w-24 mx-auto logo" href="/">
      <img src="<%= relative_url '/images/logo.svg' %>" alt="<%= "#{site.metadata.title} Logo" %>" />
    </a>
  </div>
  <div id="tagline" class="">
    <div class="flex flex-col items-center">
      <p class=""><%= site.metadata.tagline %></p>
      <a class="inline-block px-4 py-2 text-sm border border-gray-500 rounded-sm" href="/">Learn more</a>
    </div>
  </div>
</section>
<ul>
  <% collections.posts.resources.each do |post| %>
    <li>
      <a href="<%= post.relative_url %>"><%= post.data.title %></a>
      <%= reading_time(post.content) %> minutes
    </li>
  <% end %>
</ul>
