---
layout: default
---

{% assign words = content | number_of_words %}

<div class="container max-w-2xl pt-8">
  <article>
    <header class="text-center">
      <div class="text-xs font-semibold text-center uppercase">
        <time class="text-gray-500" datetime="{{ page.date | date: "%Y-%m-%d" }}">{{ page.date | date: "%b %d, %Y" }} &bull;</time>
        <span class="text-gray-500">{% include reading_time.liquid content=content %} &bull; </span>
        <span class="text-red-500"> {{ page.tags.first | capitalize }}  </span>
      </div>
      <h1 class="page-title"> {{ page.title }}  </h1>
      <p class="text-2xl"> {{ page.excerpt  }} </p>
      <figure class="py-6">
        <img src="/assets/images/posts/{{ page.image }}" alt=" {{ page.image_description}}" />
      </figure>
    </header>
    <main class="markdown">
      {{ content }}
    </main>
  </article>
</div>