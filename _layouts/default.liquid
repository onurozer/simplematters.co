<!DOCTYPE html>
<html lang="{{ site.lang | default: "en-US" }}">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;600;700;800&family=Poppins:wght@700&display=swap" rel="stylesheet">
    <!-- Stylesheet -->
    <link rel="stylesheet" href="{{ "/assets/css/main.css" | relative_url }}">
    <!-- Analytics -->
    {% if jekyll.environment == "production" %}
      <script defer data-domain="simplematters.co" src="https://plausible.io/js/script.js"></script>
    {% endif %}
    {% seo %}    
  </head>
  <body class="antialiased text-gray-900 dark:bg-gray-800 dark:text-gray-100">
    <div class="px-4 sm:px-5">
      {% include header.liquid %}
      <div class="">
          {{ content }}
      </div>
      {% include footer.liquid  %}
    </div>
  </body>
</html>